<config>
    <modules>
        <Itabs_Debit>
            <version>1.0.7</version>
        </Itabs_Debit>
    </modules>
    <global>
        <blocks>
            <debit>
                <class>Itabs_Debit_Block</class>
            </debit>
        </blocks>
        <helpers>
            <debit>
                <class>Itabs_Debit_Helper</class>
            </debit>
        </helpers>
        <models>
            <debit>
                <class>Itabs_Debit_Model</class>
                <resourceModel>debit_resource</resourceModel>
            </debit>
            <debit_resource>
                <class>Itabs_Debit_Model_Resource</class>
                <entities>
                    <order_grid>
                        <table>debit_order_grid</table>
                    </order_grid>
                    <mandates>
                        <table>debit_mandates</table>
                    </mandates>
                </entities>
            </debit_resource>
        </models>
        <resources>
            <debit_setup>
                <setup>
                    <module>Itabs_Debit</module>
                </setup>
            </debit_setup>
        </resources>
        <events>
            <payment_method_is_active>
                <observers>
                    <debit_observer>
                        <class>debit/observer</class>
                        <method>paymentMethodIsActive</method>
                    </debit_observer>
                </observers>
            </payment_method_is_active>
            <sales_order_save_after>
                <observers>
                    <debit_observer>
                        <class>debit/observer</class>
                        <method>saveAccountInfo</method>
                    </debit_observer>
                </observers>
            </sales_order_save_after>
        </events>
        <fieldsets>
            <sales_convert_quote_payment>
                <debit_swift>
                    <to_order_payment>*</to_order_payment>
                </debit_swift>
                <debit_iban>
                    <to_order_payment>*</to_order_payment>
                </debit_iban>
                <debit_type>
                    <to_order_payment>*</to_order_payment>
                </debit_type>
                <debit_company>
                    <to_order_payment>*</to_order_payment>
                </debit_company>
                <debit_street>
                    <to_order_payment>*</to_order_payment>
                </debit_street>
                <debit_city>
                    <to_order_payment>*</to_order_payment>
                </debit_city>
                <debit_country>
                    <to_order_payment>*</to_order_payment>
                </debit_country>
                <debit_email>
                    <to_order_payment>*</to_order_payment>
                </debit_email>
            </sales_convert_quote_payment>
            <sales_convert_order_payment>
                <debit_swift>
                    <to_quote_payment>*</to_quote_payment>
                </debit_swift>
                <debit_iban>
                    <to_quote_payment>*</to_quote_payment>
                </debit_iban>
                <debit_type>
                    <to_quote_payment>*</to_quote_payment>
                </debit_type>
                <debit_company>
                    <to_quote_payment>*</to_quote_payment>
                </debit_company>
                <debit_street>
                    <to_quote_payment>*</to_quote_payment>
                </debit_street>
                <debit_city>
                    <to_quote_payment>*</to_quote_payment>
                </debit_city>
                <debit_country>
                    <to_quote_payment>*</to_quote_payment>
                </debit_country>
                <debit_email>
                    <to_quote_payment>*</to_quote_payment>
                </debit_email>
            </sales_convert_order_payment>
        </fieldsets>
    </global>
    <default>
        <payment>
            <debit>
                <active>0</active>
                <model>debit/debit</model>
                <title>Debit Payment</title>
                <sort_order>10</sort_order>
                <sendmail>0</sendmail>
                <sendmail_crypt>1</sendmail_crypt>
                <order_status>1</order_status>
                <allowspecific>0</allowspecific>
                <save_account_data>0</save_account_data>
                <specificgroup_all>1</specificgroup_all>
                <specificgroup>0</specificgroup>
                <orderscount>0</orderscount>
                <customer_order_amount>0</customer_order_amount>
            </debit>
        </payment>
        <debitpayment>
            <sepa>
                <mandate_text><![CDATA[Ich ermächtige den Zahlungsempfänger, Zahlungen von meinem Konto mittels Lastschrift einzuziehen. Zugleich weise ich mein Kreditinstitut an, die von dem Zahlungsempfänger auf mein Konto gezogenen Lastschriften einzulösen.

Hinweis: Ich kann innerhalb von acht Wochen, beginnend mit dem Belastungsdatum, die Erstattung des belasteten Betrages verlangen. Es gelten dabei die mit meinem Kreditinstitut vereinbarten Bedingungen]]></mandate_text>
            </sepa>
        </debitpayment>
    </default>
    <admin>
        <routers>
            <debit>
                <use>admin</use>
                <args>
                    <module>Itabs_Debit</module>
                    <frontName>debit</frontName>
                </args>
            </debit>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <debit>
                    <file>debit.xml</file>
                </debit>
            </updates>
        </layout>
        <translate>
            <modules>
                <Itabs_Debit>
                    <files>
                        <default>Itabs_Debit.csv</default>
                    </files>
                </Itabs_Debit>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <secure_url>
            <debit_account>/debit/account</debit_account>
        </secure_url>
        <translate>
            <modules>
                <Itabs_Debit>
                    <files>
                        <default>Itabs_Debit.csv</default>
                    </files>
                </Itabs_Debit>
            </modules>
        </translate>
        <layout>
            <updates>
                <debit>
                    <file>debit.xml</file>
                </debit>
            </updates>
        </layout>
        <routers>
            <debit>
                <use>standard</use>
                <args>
                    <module>Itabs_Debit</module>
                    <frontName>debit</frontName>
                </args>
            </debit>
        </routers>
        <events>
            <controller_action_predispatch_checkout_onepage_saveOrder>
                <observers>
                    <debit_observer>
                        <class>debit/observer</class>
                        <method>controllerActionPredispatchCheckoutOnepageSaveOrder</method>
                    </debit_observer>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveOrder>
            <checkout_type_onepage_save_order_after>
                <observers>
                    <debit_observer>
                        <class>debit/observer</class>
                        <method>checkoutTypeOnepageSaveOrderAfter</method>
                    </debit_observer>
                </observers>
            </checkout_type_onepage_save_order_after>
        </events>
    </frontend>
    <crontab>
        <jobs>
            <debit_mandates_generation>
                <schedule>
                    <cron_expr>*/30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>debit/cron::generate</model>
                </run>
            </debit_mandates_generation>
        </jobs>
    </crontab>
    <phpunit>
        <suite>
            <modules>
                <Itabs_Debit/>
            </modules>
        </suite>
    </phpunit>
</config>
